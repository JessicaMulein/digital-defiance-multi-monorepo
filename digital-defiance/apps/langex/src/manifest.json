{
  "name": "LangEx: Language Extension",
  "version": "1.0",
  "description": "Learn to read the words on your screen",
  "manifest_version": 3,
  "default_locale": "en",
  "action": {},
  "icons": {
    "16": "assets/images/get_started16.png",
    "32": "assets/images/get_started32.png",
    "48": "assets/images/get_started48.png",
    "128": "assets/images/get_started128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "fontSettings",
    "scripting",
    "storage",
    "tts",
    "ttsEngine",
    "unlimitedStorage",
    "webRequest"
  ],
  "host_permissions": ["*://*.forvo.com/*", "*://translate.google.com/*"]
}

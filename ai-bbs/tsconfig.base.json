{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@digital-defiance-ai-bbs/ai-bbs-lib": ["libs/ai-bbs-lib/src/index.ts"],
      "@nrwl/*": ["node_modules/@nrwl/*"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
